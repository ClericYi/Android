<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_font_3</item>
        <item name="colorPrimaryDark">@color/gray_font_3</item>
        <item name="colorAccent">@color/gray_font_3</item>
    </style>

    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CheckBoxTheme">
        <!--波纹的颜色-->
        <item name="android:colorControlHighlight">@color/bnv_color</item>
        <!--选中的颜色-->
        <item name="colorAccent">@color/bnv_color</item>
    </style>

    <style name="TabHostTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bnv_color</item>
        <item name="colorPrimaryDark">@color/bnv_color</item>
        <item name="colorAccent">@color/bnv_color</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/online_true</item>
        <item name="colorSwitchThumbNormal">#ECECEC</item>
        <item name="android:colorForeground">#BDBDBD</item>
    </style>

</resources>
