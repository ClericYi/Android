<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.raspi.easyfarming.utils.widget.VerticalSeekBar
        android:id="@+id/item_device_detail_fun_bar"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/item_device_detail_fun_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_device_detail_fun_bar"
        app:layout_constraintEnd_toStartOf="@id/item_device_detail_fun_text"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/item_device_detail_fun_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/item_device_detail_fun_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:background="@drawable/item_device_point"
        android:id="@+id/item_device_detail_fun_now"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="loading..."
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/item_device_detail_fun_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_device_detail_fun_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


</android.support.constraint.ConstraintLayout>